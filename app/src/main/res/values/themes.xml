<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiniTwitter" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryVariant">@color/color_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color_blue_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MiniTwitter.Fullscreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/color_blue_dark</item>
    </style>

    <style name="ThemeOverlay.MiniTwitter.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.MiniTwitter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MiniTwitter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MiniTwitter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryVariant">@color/color_blue_dark</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>