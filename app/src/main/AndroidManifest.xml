<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lcadevelop.android.minitwitter">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".common.MyApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_minitwitter"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_minitwitter_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiniTwitter">
        <activity
            android:name=".userinterfaces.SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.MiniTwitter.Fullscreen"/>
        <activity
            android:name=".userinterfaces.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MiniTwitter.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DashboardActivity"
            android:exported="true"
            android:label="@string/title_activity_dashboard" />
    </application>

</manifest>